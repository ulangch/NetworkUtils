            android:key="interface"
            android:title="@string/capture_interface_title" >
        </ListPreference>

        <EditTextPreference
            android:key="write_file"
            android:summary="@string/capture_write_file_summary"
            android:defaultValue="@string/capture_write_file_defaultvalue"
            android:title="@string/capture_write_file_title" >
        </EditTextPreference>
