    <PreferenceCategory android:title="@string/capture" >
        
        <SwitchPreference
            android:key="isCapturing"
            android:summary="@string/capture_controller_summary"
            android:title="@string/capture_controller_title">
        </SwitchPreference>

        <ListPreference
            android:defaultValue="wlan0"
            android:entries="@array/capture_interface_list_entry"
